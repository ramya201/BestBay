<b><p id="notice" style="color: #dc0000;"><%= notice %></p> </b>
<div id="item_list" style="padding:20px;border-color: #4b4513;border-style:outset;border-width:2px;background-color: #f5f5ed;width: 50%;"><%= render 'item_detail' %>

<% if (user_signed_in?) && (@item.user_id == User.current_user.id) %>
    <%= link_to 'Edit Item', edit_item_path(@item), class: "btn btn-primary",:remote=>true %>
      <% if @item.sale_type == "Auction" %>
      <%= link_to 'View Bids', view_bids_bid_path(:id=>@item.id), class: "btn btn-primary" %>
  <% end end %>
  </div>
<%= if (user_signed_in?) && (@item.user_id != User.current_user.id)
      if @item.sale_type == "Instant Sale"
        link_to 'Add to cart', { :controller => "cart", :action => "add", :item_obj => @item.id, :qty => 1 }, :class => "btn btn-primary", :method => "get"
      elsif @item.sale_type == "Auction"
        render 'bids/form'
    end end %>
 <br/>
  <br/>

<%= link_to 'Back', '/categories/index', :class=> "btn btn-primary" %>


