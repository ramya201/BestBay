<div id="item_list"><%= render 'item_detail' %>

<%= if @item.user_id == User.current_user.id
      link_to 'Edit Item', edit_item_path(@item), class: "btn btn-primary",:remote=>true
  end %>
  </div>
<%= if @item.user_id != User.current_user.id
link_to 'Add to cart', { :controller => "cart", :action => "add", :item_obj => @item.id, :qty => 1 }, :class => "btn btn-primary", :method => "get"
end %>
 <br/>

<%= link_to 'Back', { :controller => "categories", :action => "index"}, :method => "get", :class=> "btn btn-primary"%>



